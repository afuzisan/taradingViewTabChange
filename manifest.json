{
    "manifest_version": 3,
    "name": "トレーディングビュー拡張",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "scripting", "tabs"],
    "host_permissions": [
        "https://jp.tradingview.com/*",
        "https://kabutan.jp/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
